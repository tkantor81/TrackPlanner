<Window x:Class="WPFTrackPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTrackPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500"
        MinHeight="350" MinWidth="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="130"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="10">
            <Button Name="btnAddCurve" Content="Add Curve" Width="100" Margin="5" Click="btnAddCurve_Click"/>
            <Button Name="btnAddStraight" Content="Add Straight" Width="100" Margin="5" Click="btnAddStraight_Click"/>
        </StackPanel>
        <Canvas Margin="10"/>
    </Grid>
</Window>
